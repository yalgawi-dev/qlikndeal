{
  "manifest_version": 3,
  "name": "Qlikndeal Helper",
  "version": "1.0",
  "description": "Import listings from Facebook Marketplace to Qlikndeal in one click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Import to Qlikndeal"
  }
}